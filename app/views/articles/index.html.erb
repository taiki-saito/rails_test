<div id="main">
  <%= image_tag 'main-img.jpg' %>
</div>

<div id="article_wrap">
  <div id="article_list">

    <% @articles.each do |article| %>
    <div>
      <h2><%= link_to article.title, article_path(article.id) %></h2>
      <p><%= format_datetime(article.created_at) %></p>
      <% if user_signed_in? %>
        <%= link_to "編集", edit_article_path(article.id), :style=>"font-weight:bold" %>
        <%= link_to "削除", article_path(article.id), method: :delete, :style=>"font-weight:bold" %>
      <% end %>

    </div>
    <% end %>


  </div>

  <div class="clear"></div>
</div>
